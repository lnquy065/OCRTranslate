<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTranslationHistoryBackground"
    tools:context="com.bitstudio.aztranslate.fragments.FavoritesFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/listViewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"></android.support.v7.widget.RecyclerView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonDeleteAllFav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/delete_all_history"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:textColor="@color/colorPrimaryDark"
            app:backgroundTint="@color/colorPrimary" />
    </RelativeLayout>

</FrameLayout>
